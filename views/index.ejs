<%- include('partials/head'); %>
<div class="login-container">
    <div class="row" id="topmargin"></div>
    <div class="row" id="login">
        <div class="col-md-3"></div>
        <div class="col-md-6" id="loginheader">
            <div class="row" id="logintitle">
                <div class="title"><h1>Login</h1></div>
            </div>
            <div class="row" id="formcontainer">
                <div class="col"></div>
                <div class="col-md-9" id="middle">
                    <form class="form" action="/login" method="post" autocomplete="off"">
                        <label for="email" id="emailabel">Email</label>
                        <input type="email" name="email" class="form-control" id="email"">
        
                        <label for="password" id="pwdlabel">Password</label>
                        <input type="password" name="password" class="form-control" id="pwd"">
                        <button class="btn" type="submit" role="button" id="login-btn"><h3>Login</h3></button>
                    <% if (locals.errors && locals.errors.login) { %>
                        <% locals.errors.login.forEach(function(error) { %>
                            <p class="alert alert-primary" role="alert"><%= error %></p>
                        <% }) %>
                    <% } %>
                    </form>
                    <div class="registercontainer">
                        <a class="register" href="/register"><h4>Not with us? Sign up here</h4></a>
                    </div>
                </div>
                <div class="col"></div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
    <div class="row" id="bottommargin"></div>
</div>
<%- include('partials/footer'); %>