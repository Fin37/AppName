<%- include('partials/head'); %>
<div class="login-container">
  <form class="d-flex justify-content-center align-items-center h-100" action="/login" method="post">
    <div id="loginheader" class="d-flex flex-column">
      <% if (locals.errors && locals.errors.login) { %>
        <% locals.errors.login.forEach(function(error) { %>
          <p class="alert alert-danger h5" role="alert"><%= error %></p>
        <% }) %>
      <% } %>

      <label for="email" id="emailabel" class="h4">Email</label>
      <input type="email" name="email" class="form-control" id="email">
      <label for="password" id="pwdlabel" class="h4">Password</label>
      <input type="password" name="password" class="form-control" id="pwd">
      <button class="btn" type="submit" role="button" id="login-btn"><h4>Login</h4></button>
      <div class="registercontainer">
        <a class="register" href="/register"><h5>Not with us? Sign up here</h5></a>
      </div>
    </div>
  </form>
</div>
<%- include('partials/footer'); %>
