<%- include('partials/head'); %> 
<div class="login-container">
    <div class="row" id="topmargin"></div>
    <div class="row" id="login">
        <div class="col-md-3"></div>
        <div class="col-md-6" id="loginheader">
            <div class="row" id="logintitle">
                <div class="title"><h1>Sign Up</h1></div>
            </div>
            <div class="row" id="formcontainer">
                <div class="col"></div>
                <div class="col-md-9" id="middle">
                    <form class="form" action="/register" method="post" autocomplete="off" id="emailinput">
                        <label for="email" id="emailabel">Email</label>
                        <input type="email" name="email" class="form-control" id="email" placeholder="Email..">
        
                        <label for="password" id="pwdlabel">Password</label>
                        <input type="password" name="password" class="form-control" id="pwd" placeholder="Password..">

                        <label for="passconfirm" id="pwdlabel">Confirm Password</label>
                        <input type="password" name="passwordConfirm" class="form-control" placeholder="Confirm Password..">
                        <button type="submit">
                            <a href="/home"class="buttoncontainer"><h2>Register</h2></a>
                        </button>
                    <% if (locals.errors && locals.errors.register) { %>
                        <% locals.errors.register.forEach(function(error) { %>
                            <p class="alert alert-primary" role="alert"><%= error %></p>
                        <% }) %>
                    <% } %>
                    </form>
                    <div class="registercontainer">
                        <a class="register" href="/"><h4>Already have an account? Sign in here</h4></a>
                    </div>
                </div>
                <div class="col"></div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
    <div class="row" id="bottommargin"></div>
</div>
<%- include('partials/footer'); %>