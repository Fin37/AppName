<%- include('partials/head'); %>
<div class="account-page">
    <div class="row" id="middacc">
        <div class="col-3"></div>
        <div class="col-6" id="account-container">
            <div class="row" id="exit-row">
                <div class="col-1"></div>
                <div class="col-10"></div>
                <div class="col-1" id="iconcontainer">
                    <form action="/home" method="GET" id="close-form">
                        <button type="submit" form="close-form" id="close-button">
                            <i class="fas fa-times" id="exit-icon"></i>
                        </button>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-4"></div>
                <div class="col-4" id="profile-title"><h1><b>My Profile</b></h1></div>
                <div class="col-4"></div>
            </div>
            <div>
                <div id="profilepic-cont" class="w-100">
                    <form class="w-100" action="/account" method="post" autocomplete="off" id="emailinput" enctype="multipart/form-data">
                    <div class="d-flex flex-column align-items-center w-100">
                        <img src="<%= locals.user.photoURL %>" id="output">
                        <label for="selectpic" id="avatarlabel"><h5>Update Picture</h5>
                            <input type="file" name="avatar" id="selectpic" onchange="loadFile(event)">
                        </label>
                    </div>
                </div>
                <div class="col-1"></div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-10" id="underline"></div>
                <div class="col-1"></div>
            </div>
            <div class="row" id="updates">
                <div class="col-1"></div>
                <div class="col-10">
                    <div class="form">
                        <% if (locals.errors && locals.errors.profile) { %>
                            <% locals.errors.profile.forEach(function(error) { %>
                                <p class="alert alert-danger" role="alert"><%= error %></p>
                            <% }) %>
                        <% } %>
                        <label for="displayname" id="displayname">Display Name</label>
                        <input type="text" name="displayName" class="form-control" id="dispname" value="<%= locals.user.displayName %>">

                        <label for="email" class="mt-3">Email</label>
                        <input type="email" name="email" class="form-control" id="email" value="<%= locals.user.email %>" required>
                        <button class="btn" type="submit" role="button" id="update-btn" href="/account"><h5>Save Changes</h5></button>
                    </div>
                    </form>
                    <form class="password-form" action="/password" method="post" autocomplete="off" id="passinput" enctype="multipart/form-data">
                        <% if (locals.errors && locals.errors.password) { %>
                            <% locals.errors.password.forEach(function(error) { %>
                                <p class="alert alert-danger" role="alert"><%= error %></p>
                            <% }) %>
                        <% } %>
                        <label for="password">New Password</label>
                        <input type="password" name="password" class="form-control" id="pwd">
                        <label for="passconfirm" class="mt-3">Confirm Password</label>
                        <input type="password" name="passwordConfirm" class="form-control">
                        <button class="btn" type="submit" role="button" id="update-btn" href="/account"><h5>Update Password</h5></button>
                    </form>
                </div>
                <div class="col-1"></div>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</div>
</form>
<%- include('partials/footer'); %>
