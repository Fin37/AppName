<%- include('partials/head'); %> 
<div class="account-page">
    <div class="row" id="topacc"></div>
    <div class="row" id="middacc">
        <div class="col-3"></div>
        <div class="col-6" id="account-container">
            <div class="row" id="exit-row">
                <div class="col-1"></div>
                <div class="col-10"></div>
                <div class="col-1" id="iconcontainer">
                    <h4>icon</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-4"></div>
                <div class="col-4" id="profile-title"><h1>My Profile</h1></div>
                <div class="col-4"></div>
            </div>
            <div class="row" id="gidgets">
                <div class="col-1"></div>
                <div class="col-5" id="status-cont">
                    <div class="status"><h5>Set Status</h5></div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="col-5" id="profilepic-cont">
                    <div class="profile-picture">
                        <img src="../public/images/black.jpeg" class="img-circle" alt="Cinque Terre">
                    </div>
                </div>
                <div class="col-1"></div>
            </div>
            <div class="row" id="updates">
                <div class="col-1"></div>
                <div class="col-10">
                    <form class="form" action="/account" method="post" autocomplete="off" id="emailinput">
                        <label for="email" id="emailabel">Email</label>
                        <input type="email" name="email" class="form-control" id="email" placeholder="Email..">
            
                        <label for="fname" id="fname">First Name</label>
                        <input type="text" name="fname" class="form-control" placeholder="First Name..">
                        
                        <label for="lname" id="lname">Last Name</label>
                        <input type="text" name="lname" class="form-control" placeholder="Last Name..">
                        
                        <label for="password" id="pwdlabel">Password</label>
                        <input type="password" name="password" class="form-control" id="pwd" placeholder="Password..">
                        
                        <label for="passconfirm" id="pwdlabel">Confirm Password</label>
                        <input type="password" name="passwordConfirm" class="form-control" placeholder="Confirm Password..">
                        <% if (locals.errors && locals.errors.updateAccount) { %>
                            <% locals.errors.updateAccount.forEach(function(error) { %>
                                <p class="alert alert-primary" role="alert"><%= error %></p>
                            <% }) %>
                        <% } %>
                    </form>
                    <a href="#" class="btn" type="submit" role="button" id="update-btn"><h3>Change Settings</h3></a>
                </div>
                <div class="col-1"></div>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
    <div class="row" id="botacc"></div>
</div>
<%- include('partials/footer'); %>