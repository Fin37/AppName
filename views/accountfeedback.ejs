<%- include('partials/head'); %> 
<div class="account-page">
    <div class="row" id="topacc"></div>
    <div class="row" id="middacc">
        <div class="col-3"></div>
        <div class="col-6" id="account-container">
            <div class="row" id="exit-row">
                <div class="col-1"></div>
                <div class="col-10"></div>
                <div class="col-1" id="iconcontainer">
                    <i class="fas fa-times" id="exit-icon"></i>
                </div>
            </div>
            <div class="row">
                <div class="col-4"></div>
                <div class="col-4" id="profile-title"><h1>My Profile</h1></div>
                <div class="col-4"></div>
            </div>
            <div class="row" id="gidgets">
                <div class="col-1"></div>
                <div class="col-5" id="status-cont">
                    <div class="status"><h5>Set Status</h5></div>
                </div>
                <div class="col-5" id="profilepic-cont">
                    <div class="profile-picture">
                        <img id="output">
                        <input type="file" name="avatar" id="selectpic" onchange="loadFile(event)">
                        <label for="selectpic" id="avatarlabel">Update Picture</label>
                    </div>
                </div>
                <div class="col-1"></div>
            </div>
            <div class="row" id="updates">
                <div class="col-1"></div>
                <div class="col-10">
                    <form class="form" action="/account" method="post" autocomplete="off" id="emailinput">
                        <label for="displayname" id="displayname">Display Name</label>
                        <input type="text" name="displayName" class="form-control" id="dispname">

                        <label for="email" id="emaillabel">Email</label>
                        <input type="email" name="email" class="form-control" id="email">
        
                        <label for="password" id="pwdlabel">New Password</label>
                        <input type="password" name="password" class="form-control" id="pwd">
                        
                        <label for="passconfirm" id="pwdlabel">Confirm Password</label>
                        <input type="password" name="passwordConfirm" class="form-control">
                        <div class="btn" type="submit" role="button" id="update-btn"><h3>Changes Saved</h3></div>
                        <% if (locals.errors && locals.errors.profile) { %>
                            <% locals.errors.profile.forEach(function(error) { %>
                                <p class="alert alert-primary" role="alert"><%= error %></p>
                            <% }) %>
                        <% } %>
                    </form>
                </div>
                <div class="col-1"></div>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
    <div class="row" id="botacc"></div>
</div>
<%- include('partials/footer'); %> 